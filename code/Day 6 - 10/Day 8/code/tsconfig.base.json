{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node 20",
	"_version": "20.1.0",
	"compilerOptions": {
		"lib": [
			"es2023"
		],
		"module": "Node16",
		"target": "es2022",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node16",
		"outDir": "./dist",
		// these are usually used to enforce coding standards
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmitOnError": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictPropertyInitialization": true
	}
}